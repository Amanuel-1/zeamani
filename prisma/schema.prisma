model BlogPost {
    id String @id @default(cuid())
    authorId String
    title String @unique
    slug String @unique
    description String
    content String @db.Text
    coverImage String @db.Text
    tag Tag[]

    reactions Int[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy User @relation(fields: [authorId],references: [id])

    @@index([slug,title])
}

